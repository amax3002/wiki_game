
<html>
  <head>
    <title>Wikipedia Game</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
           <%= link_to image_tag('fun_wiki_logo.png', size: '50x50', class: "info_hover"), root_path, class: "navbar-brand", id:"logo" %>
        </div>
        <div class="collapse navbar-collapse" id="wikipedia-nav">
          <ul class="nav navbar-nav">
            <li>
              <%= link_to "games", games_path %>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
              <li><%= link_to "Log out", session_path, method: :delete %></li>
              <li><%= link_to "View Profile", user_path(current_user.id) %></li>
              <li class = "navbar-text"> Signed in as <%= current_user.full_name %></li>
            <% else %>
              <li><%= link_to "Log In", new_session_path %></li>
              <li><%= link_to "Sign Up!", new_user_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <% flash.each do |type, msg| %>
        <div class="alert alert-<%= type %>">
          <%= msg %>
        </div>
      <% end %>
      <%= yield %>
    </div>


  </body>
</html>

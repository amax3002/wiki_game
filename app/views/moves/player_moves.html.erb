
<h1 class="text-center">
  <h1>Moves#new</h1>
</h1>

<link href="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.12/css/dataTables.bootstrap.min.css" rel="stylesheet"/>
<div class="container">
<table id="game_index" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Move Number</th>
      <th>from</th>
      <th>to</th>
    </tr>
  </thead>

  <tbody>
    <% index = 0 %>
    <% Move.where(player: @player).find_each do |move| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= name_url_cleanup(move.from_point) %></td>
        <td><%= name_url_cleanup(move.to_point) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

<br>

<%= render 'nodemap', player: @player %>

<script src="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.12/js/jquery.dataTables.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.12/js/dataTables.bootstrap.min.js"></script>

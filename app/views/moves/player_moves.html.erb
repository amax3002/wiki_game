
<h1 class="text-center">
  Moves Path
</h1>

<hr>

<div class="container">
  <table id="game_index" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th>Move Number</th>
        <th>from</th>
        <th>to</th>
      </tr>
    </thead>

    <tbody>
      <% index = 0 %>
      <% Move.where(player: @player).find_each do |move| %>
        <tr>
          <td><%= index += 1 %></td>
          <td><%= name_url_cleanup(move.from_point) %></td>
          <td><%= name_url_cleanup(move.to_point) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<br>
<%= render 'nodemap', player: @player %>
</div>





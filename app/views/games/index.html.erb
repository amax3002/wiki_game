<p id="notice"><%= notice %></p>

<h1 class="text-center">Choose Game</h1>

<%= form_tag games_path, :method => 'get', :id => "games_search" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>

  <div id="games_js">
    <%= render 'games' %>
  </div>
<% end %>


<br>

<%= link_to 'Play Random Game', new_game_path, class: "btn btn-lg btn-primary btn-block"  %>


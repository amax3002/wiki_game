<p id="notice"><%= notice %></p>

<h1>Choose Game</h1>

<table>
  <thead>
    <tr>
      <th>Starting Point</th>
      <th>End Point</th>
      <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.start_point.split('/')[-1] %></td>
        <td><%= game.end_point.split('/')[-1] %></td>
        <td><%= link_to 'Play', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<br>
<%= link_to 'Play New Game', new_game_path %>

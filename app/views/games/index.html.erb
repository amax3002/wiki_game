<p id="notice"><%= notice %></p>

<h1 class="text-center">Choose Game</h1>

<table id="game_index">
  <thead>
    <tr>
      <th>Starting Point</th>
      <th>End Point</th>
      <% if current_user && current_user.admin? %>
        <th colspan="4">Options</th>
      <% else %>
        <th colspan="3">Options</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= name_url_cleanup(game.start_point) %></td>
        <td><%= name_url_cleanup(game.end_point) %></td>
        <td><%= link_to 'Play', game, class: "btn btn-info" %></td>
        <% if current_user && current_user.admin? %>
          <td><%= link_to 'Edit', edit_game_path(game), class: "btn btn-warning" %></td>
          <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          <td><%= link_to 'Show Leaderboard', game_leaderboard_index_path(game), class: "btn btn-primary" %></td>
        <% else %>
          <td><%= link_to 'Show Leaderboard', game_leaderboard_index_path(game), class: "btn btn-warning" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
  <%= will_paginate @games, renderer: BootstrapPagination::Rails %>
<br>

<%= link_to 'Play Random Game', new_game_path, class: "btn btn-lg btn-primary btn-block"  %>

